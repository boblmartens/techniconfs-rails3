= form_for @user do |f|
  = f.error_messages

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :homepage
    = f.text_field :homepage
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :birthday
    = f.text_field :birthday
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  .actions
    = f.submit 'Save'