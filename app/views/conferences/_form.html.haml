= form_for @conference, :html => { :multipart => true } do |f|
  = f.error_messages

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :teaser
    = f.file_field :teaser
    = f.hidden_field :teaser_cache
  .field
    = f.label :homepage
    = f.text_field :homepage
  .field
    = f.label :venue_name
    = f.text_field :venue_name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :start_date
    = f.text_field :start_date
  .field
    = f.label :days
    = f.text_field :days
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'